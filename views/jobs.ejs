<% include partials/nav-bar.ejs %>
<div class="container">

  
  <section id="gigs" class="container">
    <h1>All Jobs</h1>
    <div class="gig">
    <% data.forEach(function(job, index){ %>
      <h3><%= job.title %></h3>
      <p><%= job.description %></p>
      <ul>
        <li>Budget: $<%= job.salary %></li>
        <li><a href="mailto:vanbvy@gmail.com" class="btn btn-reverse">Apply Now</a></li>
      </ul>
      <div class="tech">
        <small>Technologies Needed: <span><%= job.technologies %></span></small>
      
      <% }); %>

    </div>

      
  </section>  
</div>
